<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerHomePage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:divider="@drawable/linear_layout_divider"
            android:orientation="vertical"
            android:showDividers="middle">

            <androidx.cardview.widget.CardView
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="10dp"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="24dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E6E2E2">

                    <ImageView
                        android:id="@+id/medicine_image"
                        android:layout_width="273dp"
                        android:layout_height="154dp"
                        app:srcCompat="@drawable/crocin_advance_500mg_tablet_15_s_0"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="16dp" />

                    <TextView
                        android:id="@+id/medicine_name"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:scrollHorizontally="false"
                        android:text="@string/medicine_name"
                        android:textColor="@color/black"
                        android:textSize="22dp"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="184dp" />

                    <TextView
                        android:id="@+id/medicine_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/medicine_weight"
                        android:textColor="#131313"
                        android:textSize="16dp"
                        tools:layout_editor_absoluteX="266dp"
                        tools:layout_editor_absoluteY="192dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:layout_editor_absoluteX="339dp"
        tools:layout_editor_absoluteY="641dp" />
</androidx.constraintlayout.widget.ConstraintLayout>