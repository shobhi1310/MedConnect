<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerProfile"
    android:id="@+id/sideNavbar">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/toolbar_main"
            android:id="@+id/toolbar" />

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginTop="72dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/default_user"
            tools:srcCompat="@drawable/default_user" />

        <Button
            android:id="@+id/customer_profile_edit"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginTop="220dp"
            android:background="@drawable/round_button"
            android:bufferType="normal"
            android:foreground="@drawable/ic_baseline_edit_24"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#fff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.868"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="364dp">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="23dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Email"
                    android:textSize="25sp"
                    tools:layout_editor_absoluteX="26dp"
                    tools:layout_editor_absoluteY="364dp" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="user@medconnect.com"
                    android:textColor="#3d3d3d"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="152dp"
                    tools:layout_editor_absoluteY="370dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="428dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="23dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Phone"
                    android:textSize="25sp"
                    tools:layout_editor_absoluteX="26dp"
                    tools:layout_editor_absoluteY="428dp" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="+9191919191"
                    android:textColor="#3d3d3d"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="152dp"
                    tools:layout_editor_absoluteY="433dp" />
            </LinearLayout>

<!--            <LinearLayout-->
